---
import { translations } from "../i18n/translations"
import GitHub from "./icons/GitHub.astro"
import NextJS from "./icons/NextJS.astro"
import Tailwind from "./icons/Tailwind.astro"
import Link from "./icons/Link.astro"
import LinkButton from "./LinkButton.astro"
import PHP from "./icons/PHP.astro"
import Java from "./icons/Java.astro"
import SpringBoot from "./icons/SpringBoot.astro"
import HTML from "./icons/HTML.astro"
import CSS from "./icons/CSS.astro"
import React from "./icons/React.astro"
import SCSS from "./icons/SCSS.astro"
import JavaScript from "./icons/JavaScript.astro"

const TAGS = {
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
  PHP: {
    name: "PHP",
    class: "bg-[#777BB4] text-white",
    icon: PHP,
  },
  JAVA: {
    name: "Java",
    class: "bg-[#007396] text-white",
    icon: Java,
  },
  SPRINGBOOT: {
    name: "Spring Boot",
    class: "bg-[#6DB33F] text-white",
    icon: SpringBoot,
  },
  HTML: {
    name: "HTML",
    class: "bg-[#E34C26] text-white",
    icon: HTML,
  },
  CSS: {
    name: "CSS",
    class: "bg-[#1572B6] text-white",
    icon: CSS,
  },
  REACT: {
    name: "React",
    class: "bg-[#61DAFB] text-black",
    icon: React,
  },
  SCSS: {
    name: "SCSS",
    class: "bg-[#C6538C] text-white",
    icon: SCSS,
  },
  JAVASCRIPT: {
    name: "JavaScript",
    class: "bg-[#F7DF1E] text-black",
    icon: JavaScript,
  },
}
const PROJECTS = [
  {
    key: 'lacha',
    link: "https://lachacragourmet.netlify.app/",
    github: "https://github.com/la-chacra/La-Chacra",
    image: "/projects/lacha.png",
    tags: [TAGS.REACT, TAGS.TAILWIND, TAGS.PHP],
  },
  {
    key: 'br',
    github: "https://github.com/mateoparentini/BienesRaices-PHP",
    image: "/projects/br.png",
    tags: [TAGS.PHP, TAGS.SCSS, TAGS.JAVASCRIPT],
  },
  {
    key: 'rh',
    github: "https://github.com/mateoparentini/Backend-Java/tree/main",
    image: "/projects/rh.png",
    tags: [TAGS.JAVA, TAGS.SPRINGBOOT, TAGS.HTML, TAGS.CSS],
  },
]
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, tags, link, github, key }) => (
    <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
  <div class="w-full md:w-1/2">
    <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
      <img alt="Recién llegado vs 5 años en Nueva Zelanda" class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105" loading="lazy" src={image} />
    </div>
  </div>

  <div class="w-full md:w-1/2 md:max-w-lg">
    <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100" data-project-key={key}>
      {translations.en.projectsItems[key].title}
    </h3>
    <div class="flex flex-wrap mt-2">
      <ul class="flex flex-row mb-2 gap-x-2">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
              >
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>

      <div class="mt-2 text-gray-700 dark:text-gray-400 project-desc" data-project-key={key}>{translations.en.projectsItems[key].desc}</div>
      <footer class="flex items-end justify-start mt-4 gap-x-4">
          {github && (
            <LinkButton href={github}>
              <GitHub class="size-6" />
              <span class="btn-code">Código</span>
            </LinkButton>
          )}
          {link && (
            <LinkButton href={link}>
              <Link class="size-4" />
              <span class="btn-preview">Ver</span>
            </LinkButton>
          )}
        </footer>
    </div>
  </div>
</article>
    ))
  }
</div>

<script type="module">
  function updateProjectTexts() {
    const translations = {
      en: {
        projects: {
          code: "Code",
          preview: "Preview",
        },
        projectsItems: {
          lacha: {
            title: "La Chacra Gourmet",
            desc: "Web system for a restaurant with reservations, a dashboard and employee management. Built with React, Tailwind CSS and PHP.",
          },
          br: {
            title: "Real Estate",
            desc: "Web system to buy and sell properties. Built with PHP, SCSS and JavaScript.",
          },
          rh: {
            title: "Human Resources",
            desc: "Web application for Human Resources management. Built with Java, Spring Boot, HTML and CSS.",
          },
        }
      }
    }
    
    const trans = translations.en
    
    const codeButtons = document.querySelectorAll('.btn-code')
    const previewButtons = document.querySelectorAll('.btn-preview')
    
    codeButtons.forEach(btn => {
      btn.textContent = trans.projects.code
    })
    
    previewButtons.forEach(btn => {
      btn.textContent = trans.projects.preview
    })
  }

  // Initialize when DOM is ready
  function initializeProjects() {
    if (document.querySelector('h3[data-project-key]')) {
      updateProjectTexts()
    }
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initializeProjects)
  } else {
    initializeProjects()
  }
</script>



